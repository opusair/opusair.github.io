{
  "system": {
    "name": "NO-FOMO AI 日报",
    "description": "每日精选 AI 资讯，助您紧跟科技前沿",
    "github_repo": "https://github.com/opusair/opusair.github.io",
    "base_url": "https://opusair.github.io/NO-FOMO"
  },
  "automation": {
    "auto_commit": true,
    "cron_time": "0 9 * * *",
    "backup_enabled": true,
    "log_retention_days": 30
  },
  "display": {
    "articles_per_page": 50,
    "max_description_length": 200,
    "date_format": "YYYY年MM月DD日",
    "show_statistics": true
  },
  "git": {
    "commit_message_template": "自动更新日报 - {date}",
    "push_on_commit": true,
    "branch": "main"
  },
  "sources": {
    "default_sources": ["Twitter", "WeChat", "GitHub", "HuggingFace"],
    "source_mapping": {
      "Twitter": "🐦",
      "WeChat": "💬",
      "GitHub": "🐙",
      "HuggingFace": "🤗",
      "Reddit": "📰",
      "ArXiv": "📄"
    }
  },
  "ui": {
    "theme": "light",
    "primary_color": "#007bff",
    "enable_animations": true,
    "mobile_optimized": true
  }
} 